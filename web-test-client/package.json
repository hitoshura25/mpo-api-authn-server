{
  "name": "webauthn-web-test-client",
  "version": "1.0.0",
  "description": "WebAuthn Passkey Test Client - Web Application and Library",
  "main": "./dist/umd/webauthn-client.umd.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/umd/webauthn-client.umd.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:umd && npm run build:server",
    "build:esm": "webpack --config webpack-esm.config.js",
    "build:umd": "webpack --config webpack-umd.config.js",
    "build:dev": "webpack --config webpack.config.js --mode development",
    "build:server": "tsc --project tsconfig.build.json",
    "start": "node dist/src/server.js",
    "dev": "npm run build:dev && npm run start",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:js": "npm run build && nodemon dist/server.js",
    "postinstall": "echo 'Dependencies installed. Run npm run build after generating client.'",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "server:start": "cd ../webauthn-server && ./start-dev.sh",
    "server:stop": "cd ../webauthn-server && docker-compose down",
    "server:logs": "cd ../webauthn-server && docker-compose logs -f webauthn-server",
    "server:restart": "cd ../webauthn-server && docker-compose restart webauthn-server",
    "server:status": "cd ../webauthn-server && docker-compose ps",
    "cleanup:port": "node scripts/cleanup-port.js",
    "test:clean": "npm run cleanup:port && npm test",
    "test:with-server": "npm run server:start && (npm run test; npm run server:stop)",
    "test:with-server:report": "npm run server:start && (npm run test; npm run server:stop) && npm run test:report"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.0.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^9.0.1",
    "axios": "^1.6.1",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  }
}
