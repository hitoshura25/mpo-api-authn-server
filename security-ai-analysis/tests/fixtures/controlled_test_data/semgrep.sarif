{
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/master/Schemata/sarif-schema-2.1.0.json",
  "version": "2.1.0",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "semgrep",
          "version": "1.0.0",
          "rules": [
            {
              "id": "test.hardcoded-password",
              "name": "Hardcoded Password Detection",
              "shortDescription": {
                "text": "Hardcoded password found"
              },
              "fullDescription": {
                "text": "Application contains hardcoded password which poses security risk"
              },
              "helpUri": "https://cwe.mitre.org/data/definitions/798.html",
              "properties": {
                "tags": ["CWE-798", "security"],
                "category": "security",
                "technology": ["javascript"]
              }
            },
            {
              "id": "test.sql-injection",
              "name": "SQL Injection Vulnerability",
              "shortDescription": {
                "text": "Potential SQL injection"
              },
              "fullDescription": {
                "text": "Dynamic SQL query construction may lead to SQL injection"
              },
              "helpUri": "https://cwe.mitre.org/data/definitions/89.html",
              "properties": {
                "tags": ["CWE-89", "security"],
                "category": "security",
                "technology": ["javascript", "python"]
              }
            },
            {
              "id": "test.xss-vulnerability",
              "name": "Cross-Site Scripting (XSS)",
              "shortDescription": {
                "text": "XSS vulnerability detected"
              },
              "fullDescription": {
                "text": "User input not properly sanitized leading to XSS"
              },
              "helpUri": "https://cwe.mitre.org/data/definitions/79.html",
              "properties": {
                "tags": ["CWE-79", "security"],
                "category": "security",
                "technology": ["javascript", "web"]
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "test.hardcoded-password",
          "level": "error",
          "message": {
            "text": "Hardcoded password 'admin123' detected in configuration"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "test-config.js"
                },
                "region": {
                  "startLine": 15,
                  "startColumn": 10,
                  "endLine": 15,
                  "endColumn": 25
                }
              }
            }
          ]
        },
        {
          "ruleId": "test.sql-injection",
          "level": "warning",
          "message": {
            "text": "Potential SQL injection via string concatenation"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "test-database.py"
                },
                "region": {
                  "startLine": 42,
                  "startColumn": 5,
                  "endLine": 44,
                  "endColumn": 15
                }
              }
            }
          ]
        },
        {
          "ruleId": "test.xss-vulnerability",
          "level": "error",
          "message": {
            "text": "User input directly rendered without sanitization"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "test-frontend.js"
                },
                "region": {
                  "startLine": 28,
                  "startColumn": 8,
                  "endLine": 28,
                  "endColumn": 35
                }
              }
            }
          ]
        }
      ]
    }
  ]
}